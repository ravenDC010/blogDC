<%- include('partials/header') %>
<div class="container">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card" id="register">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group row">
              <label class="col-12 col-md-2" for="firstName">First Name</label>
              <input type="text" class="form-control col-12 col-md" name="firstName">
            </div>

            <div class="form-group row">
              <label class="col-md-2" for="lastName">Last Name</label>
              <input type="text" class="form-control col-12 col-md" name="lastName">
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2" for="gender">Gender </label>
              <div class="form-check-inline">
                <label class="form-check-label" for="male">Male</label>
                <input type="radio" class="form-check-input" name="gender" value="male">
                <label class="form-check-label offset-md-1" for="female">Female</label>
                <input type="radio" class="form-check-input" name="gender" value="female">
              </div>
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2" for="email">Email</label>
              <input type="email" class="form-control col-12 col-md" name="username">
            </div>

            <div class="form-group row">
              <label class="col-12 col-md-2" for="password">Password</label>
              <input type="password" class="form-control col-12 col-md" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
